<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/hostListViewMainLayout">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/hostItemTypeImageView" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hostItemContentLayout"
        android:layout_margin="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Hostname"
            android:id="@+id/hostItemNameTextView"
            android:textColor="#ff000000"
            android:textColorHighlight="#ff000000" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="3"
            android:columnCount="3"
            android:id="@+id/hostItemGridLayout"
            android:useDefaultMargins="false"
            android:layout_marginLeft="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="IP:"
                android:id="@+id/hostNameStaticTextView"
                android:layout_row="0"
                android:layout_column="0"
                android:textColor="#ff000000"
                android:textColorHighlight="#ff000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="0.0.0.0"
                android:id="@+id/hostItemIPTextView"
                android:layout_row="0"
                android:layout_column="1"
                android:textColor="#ff000000"
                android:textColorHighlight="#ff000000"
                android:layout_marginLeft="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="MAC:"
                android:id="@+id/hostItemStaticTextView2"
                android:layout_row="1"
                android:layout_column="0"
                android:textColor="#ff000000"
                android:textColorHighlight="#ff000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="00:00:00:00:00:00 (Vendor)"
                android:id="@+id/hostItemMACTextView"
                android:layout_row="1"
                android:layout_column="1"
                android:textColor="#ff000000"
                android:textColorHighlight="#ff000000"
                android:layout_marginLeft="4dp" />
        </GridLayout>
    </LinearLayout>
</LinearLayout>
